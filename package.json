{
  "name": "finance-tracker-v2",
  "private": true,
  "version": "0.0.1",
  "author": "Thomas van Rossum",
  "main": "dist/electron/main/main.js",
  "scripts": {
    "vite:dev": "vite",
    "vite:build": "vue-tsc --noEmit && vite build",
    "vite:preview": "vite preview",
    "ts": "tsc",
    "watch": "tsc -w",
    "lint": "eslint -c .eslintrc --ext .ts ./src",
    "dev": "tsc && concurrently vite \" electron .\" \"tsc -w\"",
    "build": "npm run vite:build && tsc && electron-builder",
    "app:preview": "npm run vite:build && tsc && electron ."
  },
  "build": {
    "appId": "YourAppID",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "release/${version}"
    },
    "files": [
      "dist"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "@primevue/themes": "^4.2.1",
    "chart.js": "^4.4.6",
    "install": "^0.13.0",
    "npm": "^10.9.0",
    "primeicons": "^7.0.0",
    "primevue": "^4.2.1",
    "vue": "^3.2.25",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^2.3.3",
    "concurrently": "^7.2.2",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "pinia": "^2.0.18",
    "typescript": "^5.6.3",
    "vite": "^2.9.9",
    "vue-router": "^4.1.3",
    "vue-tsc": "^0.34.7"
  }
}
